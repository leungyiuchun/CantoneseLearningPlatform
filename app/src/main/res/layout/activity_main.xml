<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="5sp"
    android:paddingRight="5sp"
    android:paddingTop="5sp"
    android:paddingBottom="5sp" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/home_theme"
        android:id="@+id/home_theme"
        android:textSize="100dp"
        android:layout_marginTop="116dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textSize="45dp"
        android:id="@+id/setting_button"
        android:layout_marginRight="107dp"
        android:layout_marginEnd="107dp"
        android:layout_alignTop="@+id/play_button"
        android:layout_alignRight="@+id/home_theme"
        android:layout_alignEnd="@+id/home_theme" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_play"
        android:textSize="45dp"
        android:id="@+id/play_button"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/home_theme"
        android:layout_alignStart="@+id/home_theme"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="110dp" />
</RelativeLayout>
